<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyTodoList" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/buttonPositive</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.MyTodoList" parent="Base.Theme.MyTodoList" />

    <style name="Theme.MyTodoList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TodoItemStyle">
        <item name="android:background">@drawable/todo_item_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="TodoTitleTextStyle">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TodoDateTextStyle">
        <item name="android:textColor">@color/dateTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">100dp</item>
    </style>
</resources>