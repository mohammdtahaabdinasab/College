<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base calculator button style -->
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="backgroundTint">@color/lightBlue</item>
    </style>

    <!-- Digit buttons (0-9) -->
    <style name="CalculatorButtonDigit" parent="CalculatorButton">
        <item name="backgroundTint">@color/mediumBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Operator buttons (+, -, *, /) -->
    <style name="CalculatorButtonOperator" parent="CalculatorButton">
        <item name="backgroundTint">@color/lightBlue</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <!-- Function buttons (C, backspace) -->
    <style name="CalculatorButtonFunction" parent="CalculatorButton">
        <item name="backgroundTint">@color/darkBlue</item>
        <item name="android:textColor">@color/veryLightBlue</item>
    </style>

    <!-- Equals button -->
    <style name="CalculatorButtonEquals" parent="CalculatorButton">
        <item name="backgroundTint">@color/darkBlue</item>
        <item name="android:textColor">@color/paleBlue</item>
    </style>
</resources> 